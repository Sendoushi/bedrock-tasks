{
    "projectId": "test",
    "projectName": "Test",
    "tasks": [{
        "type": "sprite",
        "env": "*",
        "data": [{
            "src": "./test/sprite/img/**/*.png",
            "dest": "./test/build/sprite/img",
            "options": {
                "style": "./test/build/img_sprite.scss",
                "styleTemplate": "./tasks/modules/_assets/sprite_template.css.handlebars"
            }
        }, {
            "src": "./test/sprite/svg/**/*.svg",
            "dest": "./test/build/sprite/svg",
            "options": {
                "preview": false,
                "mode": "defs",
                "selector": "%f",
                "svgId": "%f",
                "transformData": "var data = arguments[0]; var i; for (i = 0; i < data.svg.length; i += 1) { data.svg[i].width = null; data.svg[i].height = null; data.svg[i].data = data.svg[i].data.replace(/<svg(.*)viewBox=/g, '<svg viewBox='); } return data;"
            }
        }]
    }]
}
